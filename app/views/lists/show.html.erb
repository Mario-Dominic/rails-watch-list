<h1><%= @list.name %> List</h1>
<%= link_to "Edit", edit_list_path(@list), class: "edit-link" %>
<%= link_to "🗑️", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete-icon" %>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <%= image_tag(bookmark.movie.poster_url, alt: "Poster for #{bookmark.movie.title}", style: "width: 100px; height: auto;") %>
    </li>
    <li><%= bookmark.movie.title %></li>
    <li><%= bookmark.movie.overview %></li>
    <li><%= bookmark.movie.rating %></li>
    <li><%= bookmark.comment %></li>
    <li>
      <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add Movie', new_list_bookmark_path(@list) %>
<%= link_to 'Back to List', lists_path %>
